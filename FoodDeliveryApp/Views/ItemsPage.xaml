<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodDeliveryApp.Views.ItemsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FoodDeliveryApp.ViewModels"
    xmlns:model="clr-namespace:FoodDeliveryApp.Models.ShopModels"
    x:Name="ItemsSubCateg"
    Title="{Binding Title}"
    Shell.PresentationMode="Animated">
    <!--
        x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
        https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->
    <StackLayout>
        <StackLayout
            BackgroundColor="{AppThemeBinding Light=White,
                                              Dark=Black}"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal">
            <Entry
                BackgroundColor="{AppThemeBinding Light=LightCyan,
                                                  Dark=DarkCyan}"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Placeholder="Cauta Produs"
                PlaceholderColor="{AppThemeBinding Light=Black,
                                                   Dark=White}"
                Text="{Binding SearchItem}"
                TextColor="{AppThemeBinding Light=Black,
                                            Dark=White}" />

            <ImageButton
                Margin="0,0,10,0"
                BackgroundColor="Transparent"
                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=SearchCommand}"
                HeightRequest="25"
                HorizontalOptions="End"
                Source="{AppThemeBinding Light=img_search.png,
                                         Dark=img_search_dark.png}" />

        </StackLayout>
        <!--<RefreshView Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">-->
        <CollectionView
            x:Name="CategListView"
            BackgroundColor="{AppThemeBinding Light=LightCyan,
                                              Dark=DarkCyan}"
            IsGrouped="True"
            ItemsLayout="VerticalGrid,2"
            SelectionMode="None"
            VerticalOptions="FillAndExpand">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Frame
                        BackgroundColor="AntiqueWhite"
                        CornerRadius="20"
                        HorizontalOptions="CenterAndExpand">
                        <Label
                            FontSize="Medium"
                            HorizontalOptions="CenterAndExpand"
                            LineBreakMode="WordWrap"
                            Text="{Binding Key.Name}"
                            TextColor="Black" />
                    </Frame>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout BackgroundColor="Transparent">
                        <Frame
                            Margin="5"
                            Padding="0"
                            BackgroundColor="Transparent"
                            CornerRadius="10">
                            <StackLayout BackgroundColor="MediumAquamarine" HeightRequest="250">

                                <StackLayout
                                    Margin="5,5,5,5"
                                    x:DataType="model:Item"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Vertical"
                                    VerticalOptions="FillAndExpand">

                                    <StackLayout HorizontalOptions="CenterAndExpand">
                                        <Image
                                            Margin="5,0,5,0"
                                            Aspect="AspectFit"
                                            BackgroundColor="Transparent"
                                            HeightRequest="90"
                                            Source="{Binding ImageFinal.Source}"
                                            WidthRequest="90" />
                                        <Label
                                            FontSize="Medium"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="WordWrap"
                                            Style="{DynamicResource ListItemTextStyle}"
                                            Text="{Binding Name}"
                                            TextColor="Black" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ItemTapped}"
                                                CommandParameter="{Binding .}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                                        <Label
                                            FontSize="Small"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemTextStyle}"
                                            Text="{Binding GramajInterfata}"
                                            TextColor="Black" />
                                        <Label
                                            FontSize="Small"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemDetailTextStyle}"
                                            Text="{Binding PretInterfata}"
                                            TextColor="Black" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=ItemTapped}"
                                                CommandParameter="{Binding .}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <StackLayout
                                        Margin="0,0,0,10"
                                        HorizontalOptions="CenterAndExpand"
                                        Orientation="Horizontal"
                                        VerticalOptions="EndAndExpand">
                                        <ImageButton
                                            Margin="5,0,5,0"
                                            Aspect="AspectFit"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=MinusCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="28"
                                            Source="minus.png"
                                            WidthRequest="28" />
                                        <Label
                                            Margin="20,0,20,0"
                                            FontSize="Large"
                                            Text="{Binding Cantitate}"
                                            TextColor="Blue"
                                            VerticalTextAlignment="Center" />
                                        <ImageButton
                                            Margin="5,0,5,0"
                                            Aspect="AspectFit"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:ItemsViewModel}}, Path=PlusCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="28"
                                            Source="plus.png"
                                            WidthRequest="28" />
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!--</RefreshView>-->
    </StackLayout>
</ContentPage>
