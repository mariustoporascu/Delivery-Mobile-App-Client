<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodDeliveryApp.Views.OrderInfoPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FoodDeliveryApp.Controls"
    xmlns:fRating="clr-namespace:Rating;assembly=Rating"
    xmlns:local="clr-namespace:FoodDeliveryApp.ViewModels"
    xmlns:model="clr-namespace:FoodDeliveryApp.Models.ShopModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="{Binding Title}"
    Shell.PresentationMode="Animated">
    <ContentPage.Resources>
        <ResourceDictionary>
            <xct:InvertedBoolConverter x:Key="invertBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <RefreshView
        x:DataType="local:OrderInfoViewModel"
        Command="{Binding RefreshCommand}"
        HorizontalOptions="FillAndExpand"
        IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
        VerticalOptions="FillAndExpand">
        <ScrollView BackgroundColor="White" VerticalOptions="FillAndExpand">
            <StackLayout>
                <StackLayout
                    Margin="5"
                    x:DataType="local:OrderInfoViewModel"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="Goldenrod"
                    HorizontalOptions="FillAndExpand">
                    <StackLayout
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Vertical"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="NoWrap"
                            Text="Detalii Comanda "
                            TextColor="Black"
                            WidthRequest="120" />
                    </StackLayout>
                    <StackLayout
                        Margin="5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal">

                        <StackLayout
                            HorizontalOptions="CenterAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="CenterAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="Status"
                                TextColor="Black" />
                            <Label
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding CurrOrder.Status}"
                                TextColor="Black" />
                        </StackLayout>
                        <StackLayout
                            HorizontalOptions="CenterAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="CenterAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="Total produse"
                                TextColor="Black" />
                            <Label
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding CurrOrder.TotalOrderedInterfata}"
                                TextColor="Black" />
                        </StackLayout>
                        <StackLayout
                            HorizontalOptions="CenterAndExpand"
                            Orientation="Vertical"
                            VerticalOptions="CenterAndExpand">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="Cost Transport"
                                TextColor="Black" />
                            <Label
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding CurrOrder.TransportFee}"
                                TextColor="Black" />
                        </StackLayout>
                    </StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="Small"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Modalitate de plata aleasa"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center"
                        WidthRequest="90" />
                    <Label
                        Margin="0,0,0,10"
                        FontSize="Small"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="{Binding CurrOrder.PaymentMethod}"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center" />
                    <StackLayout
                        Margin="5"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding OwnerViewVis}"
                        Orientation="Horizontal">

                        <StackLayout Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="Detalii companie:"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="120" />

                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding Restaurant.Name}"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="100" />
                            <controls:AwesomeHyperLinkLabel
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding Restaurant.TelefonNo}"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="130" />

                        </StackLayout>
                    </StackLayout>
                    <StackLayout
                        Margin="5"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding HasDriver}"
                        Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="Detalii sofer:"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="100" />

                            <Label
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding CurrOrderDriver.FirstName}"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="75" />
                            <controls:AwesomeHyperLinkLabel
                                FontAttributes="Bold"
                                FontSize="Small"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding CurrOrderDriver.TelefonNo}"
                                TextColor="Black"
                                VerticalTextAlignment="Center"
                                WidthRequest="130" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Margin="5"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="LightCyan"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding HasEstimatedTime}"
                    Orientation="Vertical">

                    <StackLayout Orientation="Horizontal">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Timp estimate de preparare: "
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="200" />

                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="{Binding CurrOrder.EstimatedTime}"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="100" />


                    </StackLayout>
                    <StackLayout
                        Margin="5"
                        Padding="5"
                        xct:CornerRadiusEffect.CornerRadius="10"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="{Binding HasUserResponded, Converter={StaticResource invertBoolConverter}}"
                        Orientation="Vertical">
                        <StackLayout Orientation="Horizontal">
                            <Button
                                Margin="0"
                                Padding="0"
                                xct:CornerRadiusEffect.CornerRadius="30"
                                BackgroundColor="OrangeRed"
                                Clicked="Button_Clicked_1"
                                FontSize="Medium"
                                HorizontalOptions="CenterAndExpand"
                                Text="Refuza"
                                TextTransform="None" />

                            <Button
                                Margin="0"
                                Padding="0"
                                xct:CornerRadiusEffect.CornerRadius="30"
                                BackgroundColor="LimeGreen"
                                Clicked="Button_Clicked"
                                FontSize="Medium"
                                HorizontalOptions="CenterAndExpand"
                                Text="Accepta"
                                TextColor="Black"
                                TextTransform="None" />


                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Margin="5"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="{AppThemeBinding Light=LightCyan,
                                                      Dark=LightCyan}"
                    IsVisible="{Binding CanGiveRating}">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Ofera un rating livratorului."
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center" />

                    <fRating:RatingBar
                        x:Name="Rating"
                        Command="{Binding ChangeRatingDriver}"
                        EmptyStarImage="empty_star"
                        FillStarImage="filled_star"
                        HorizontalOptions="Center"
                        ImageHeight="30"
                        ImageWidth="30"
                        IsEnabled="{Binding CurrOrder.ClientGaveRatingDriver, Converter={StaticResource invertBoolConverter}}"
                        SelectedStarValue="{Binding CurrOrder.RatingDriver}" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Ofera un rating restaurantului."
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center" />

                    <fRating:RatingBar
                        x:Name="Rating2"
                        Command="{Binding ChangeRatingRestaurant}"
                        EmptyStarImage="empty_star"
                        FillStarImage="filled_star"
                        HorizontalOptions="Center"
                        ImageHeight="30"
                        ImageWidth="30"
                        IsEnabled="{Binding CurrOrder.ClientGaveRatingCompanie, Converter={StaticResource invertBoolConverter}}"
                        SelectedStarValue="{Binding CurrOrder.RatingCompanie}" />



                </StackLayout>

                <StackLayout
                    Margin="5"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="{AppThemeBinding Light=LightCyan,
                                                      Dark=LightCyan}">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Detalii Livrare"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand"
                        VerticalTextAlignment="Center"
                        WidthRequest="90" />
                    <StackLayout Orientation="Horizontal">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Nume complet"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="80" />

                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Nr. Telefon"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="100" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Adresa"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="95" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="{Binding CurrOrderInfo.FullName}"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="80" />

                        <controls:AwesomeHyperLinkLabel
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="{Binding CurrOrderInfo.PhoneNo}"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="100" />
                        <Label
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="{Binding CurrOrderInfo.Address}"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="95" />
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Margin="5"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="{AppThemeBinding Light=LightCyan,
                                                      Dark=LightCyan}"
                    IsVisible="{Binding HasComments}">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Comentarii comanda"
                        TextColor="Black"
                        VerticalTextAlignment="Center" />
                    <Label
                        FontSize="Default"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="{Binding CurrOrder.Comments}"
                        TextColor="Black"
                        VerticalTextAlignment="Center" />
                </StackLayout>
                <StackLayout
                    Margin="5"
                    Padding="5"
                    xct:CornerRadiusEffect.CornerRadius="10"
                    BackgroundColor="{AppThemeBinding Light=LightCyan,
                                                      Dark=LightCyan}"
                    HorizontalOptions="FillAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Produse comandate"
                        TextColor="Black"
                        VerticalTextAlignment="Center"
                        WidthRequest="95" />
                    <StackLayout
                        Margin="5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal">
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="StartAndExpand"
                            HorizontalTextAlignment="Start"
                            LineBreakMode="WordWrap"
                            Text="Produs"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="100" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Gramaj"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="60" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Pret"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            WidthRequest="60" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Text="Cantitate"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="70" />
                    </StackLayout>
                    <FlexLayout
                        AlignContent="SpaceAround"
                        AlignItems="Start"
                        BindableLayout.ItemsSource="{Binding Items}"
                        Direction="Row"
                        HorizontalOptions="FillAndExpand"
                        JustifyContent="SpaceAround"
                        Wrap="Wrap">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    Margin="0,5,0,5"
                                    x:DataType="model:OrderProductDisplay"
                                    xct:CornerRadiusEffect.CornerRadius="15"
                                    BackgroundColor="LightSeaGreen"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Vertical">

                                    <StackLayout
                                        Margin="5"
                                        HorizontalOptions="FillAndExpand"
                                        Orientation="Horizontal">
                                        <Label
                                            FontSize="Small"
                                            HorizontalOptions="StartAndExpand"
                                            HorizontalTextAlignment="Start"
                                            LineBreakMode="WordWrap"
                                            Text="{Binding Name}"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center"
                                            WidthRequest="110" />
                                        <Label
                                            FontSize="Small"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="WordWrap"
                                            Text="{Binding GramajInterfata}"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center"
                                            WidthRequest="80" />
                                        <Label
                                            FontSize="Small"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="WordWrap"
                                            Text="{Binding PretInterfata}"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center"
                                            WidthRequest="80" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="WordWrap"
                                            Text="{Binding Cantitate}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand"
                                            WidthRequest="80" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:OrderInfoViewModel}}, Path=ItemTapped}"
                                                CommandParameter="{Binding .}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <StackLayout
                                        Margin="5"
                                        HorizontalOptions="FillAndExpand"
                                        IsVisible="{Binding HasComments}"
                                        Orientation="Horizontal">
                                        <Label
                                            FontSize="Small"
                                            HorizontalOptions="Start"
                                            LineBreakMode="WordWrap"
                                            Text="Comentarii client produs: "
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand"
                                            WidthRequest="100" />
                                        <Label
                                            FontSize="Small"
                                            HorizontalOptions="Start"
                                            LineBreakMode="WordWrap"
                                            Text="{Binding ClientComments}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                </StackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>