<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodDeliveryApp.Views.CosContentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FoodDeliveryApp.ViewModels"
    xmlns:model="clr-namespace:FoodDeliveryApp.Models"
    x:Name="Cos"
    Title="{Binding Title}"
    Shell.PresentationMode="Animated">
    <StackLayout>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                Margin="2"
                BackgroundColor="Black">
                <Grid Margin="2" BackgroundColor="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Column="0">
                        <Label
                            FontSize="16"
                            LineBreakMode="WordWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            Text="Produs"
                            TextColor="Black" />
                    </StackLayout>
                    <StackLayout Grid.Column="1">
                        <Label
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            Text="Gramaj/Pret"
                            TextColor="Black" />
                    </StackLayout>
                    <StackLayout Grid.Column="2">
                        <Label
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            Text="Cantitate"
                            TextColor="Black" />
                    </StackLayout>
                    <StackLayout Grid.Column="3">
                        <Label
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="WordWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            Text="Sterge din cos"
                            TextColor="Black" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Grid>

        <!--<RefreshView
            x:DataType="local:CosContentViewModel"
            Command="{Binding LoadItemsCommand}"
            IsRefreshing="{Binding IsBusy, Mode=TwoWay}">-->
            <CollectionView
                x:Name="ItemsListView"
                BackgroundColor="WhiteSmoke"
                ItemsSource="{Binding Items}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid BackgroundColor="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackLayout
                                Grid.Row="0"
                                Margin="2"
                                BackgroundColor="Black">
                                <Grid Margin="2" BackgroundColor="White">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout
                                        Grid.Column="0"
                                        x:DataType="model:CartItem"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            FontSize="16"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemTextStyle}"
                                            Text="{Binding Name}"
                                            TextColor="Black" />
                                        <Label
                                            FontSize="13"
                                            LineBreakMode="WordWrap"
                                            Style="{DynamicResource ListItemDetailTextStyle}"
                                            Text="{Binding Description}"
                                            TextColor="Black" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:CosContentViewModel}}, Path=ItemTapped}"
                                                CommandParameter="{Binding .}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <StackLayout
                                        Grid.Column="1"
                                        x:DataType="model:CartItem"
                                        HorizontalOptions="CenterAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label
                                            FontSize="16"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemTextStyle}"
                                            Text="{Binding Gramaj}"
                                            TextColor="Black" />
                                        <Label
                                            FontSize="13"
                                            LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemDetailTextStyle}"
                                            Text="{Binding Price}"
                                            TextColor="Black" />
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:CosContentViewModel}}, Path=ItemTapped}"
                                                CommandParameter="{Binding .}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                    <StackLayout
                                        Grid.Column="2"
                                        x:DataType="model:CartItem"
                                        HorizontalOptions="CenterAndExpand"
                                        Orientation="Horizontal">
                                        <ImageButton
                                            Margin="5,0,5,0"
                                            Aspect="AspectFit"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:CosContentViewModel}}, Path=MinusCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="15"
                                            Source="minus.png"
                                            WidthRequest="15" />
                                        <Label
                                            Margin="5,0,5,0"
                                            FontSize="Medium"
                                            Text="{Binding Cantitate}"
                                            TextColor="Green"
                                            VerticalTextAlignment="Center" />
                                        <ImageButton
                                            Margin="5,0,5,0"
                                            Aspect="AspectFit"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:CosContentViewModel}}, Path=PlusCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="15"
                                            Source="plus.png"
                                            WidthRequest="15" />
                                    </StackLayout>
                                    <StackLayout Grid.Column="3" x:DataType="model:CartItem">
                                        <Button
                                            Margin="10,10,10,10"
                                            BackgroundColor="Red"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:CosContentViewModel}}, Path=DeleteCommand}"
                                            CommandParameter="{Binding .}"
                                            Text="Sterge" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        <!--</RefreshView>-->
        <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
            <Label Text="TOTAL: " TextColor="Black" />
            <Label Text="{Binding Total}" TextColor="Black" />
            <Label Text=" RON" TextColor="Black" />
        </StackLayout>
        <Button Text="Finalizare" />
    </StackLayout>
</ContentPage>